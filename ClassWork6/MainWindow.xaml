<Window x:Class="ClassWork6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassWork6"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF004A65">
        <TextBox x:Name="MyTextBox" Margin="108,10,10,10" TextWrapping="Wrap" Text="" TextChanged="MyTextBox_TextChanged"/>
        <Button x:Name="Assets_Button" Content="See Assets" HorizontalAlignment="Left" Margin="3,10,0,0" Width="100" Click="See_Assets_Click" FontFamily="Dubai" Opacity="0.9" Foreground="#FF004A65" Height="20" VerticalAlignment="Top">
            <Button.Background>
                <SolidColorBrush Color="#FFE9E9E9"/>
            </Button.Background>
        </Button>
        <Button x:Name="Employee_Button" Content="See Employees" Margin="3,35,0,0" VerticalAlignment="Top" FontFamily="Dubai" Height="20" Foreground="#FF004A65" Click="See_Employees_Click" HorizontalAlignment="Left" Width="100">
            <Button.Background>
                <SolidColorBrush Color="#FFE9E9E9" Opacity="0.85"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
